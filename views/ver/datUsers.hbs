<center>
    <div class="card" style="margin-top: 1em; width: 45%;">
        <div class="card">
            <div class="card-header">
                DATOS DEL USUARIO
            </div>
            <div class="card-body" style="text-align: center;">
                <form>
                    {{#each consulta}}
                    <div class="form-group row">
                        <label for="NOMBRE" class="col-sm-4 col-form-label">NOMBRE:</label>
                        <div class="col-sm-8">
                            <input type="text" readonly class="form-control-plaintext" id="staticEmail"
                                value="{{this.nom}} {{this.pri}} {{this.seg}}">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="mat_bol" class="col-sm-4 col-form-label">MATRÍCULA/BOLETA:</label>
                        <div class="col-sm-8">
                            <input type="text" readonly class="form-control-plaintext" id="staticEmail"
                                value="{{this.mb}}">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="mat_bol" class="col-sm-4 col-form-label">CORREO ELECTRÓNICO:</label>
                        <div class="col-sm-8">
                            <input type="text" readonly class="form-control-plaintext" id="staticEmail"
                                value="{{this.email}}">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="mat_bol" class="col-sm-4 col-form-label">TELÉFONO:</label>
                        <div class="col-sm-8">
                            <input type="text" readonly class="form-control-plaintext" id="staticEmail"
                                value="{{this.tel}}">
                        </div>
                    </div>
                    {{/each}}
                    <div class="form-group row">
                        <label for="cred" class="col-sm-4 col-form-label">CRÉDITOS:</label>
                        <div class="col-sm-8">
                            <input type="text" readonly class="form-control-plaintext" id="cred"
                                value="{{crd}}">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</center>